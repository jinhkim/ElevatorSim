    public void setStatus(ElevatorStatus s) {
		status.setText(s.toString());
	}

	public void setCurrentFloor(int f) {
		currentFloor.setText(String.valueOf(f));
	}

	public void setTotalFloors(int tf) {
		totalFloors.setText(String.valueOf(tf));
	}

	public void setCurrentPassengers(int pc) {
		passengerCount.setText(String.valueOf(pc));
	}

	public void setTotalPassengers(int tpc) {
		totalPassengers.setText(String.valueOf(tpc));
	}
	
	public void setQueue(int[] q) {
		String str = "{";
		for (int i=0; i < q.length-1 && i < 7; i++) {
			str = str + q[i] + ",";
		}
		if (q.length > 0)
			str = str + q[q.length-1];
		
		str = str + "}";
		
		queue1.setText(str);
	}
	
	public void setWeight(int w) {
		weight.setText(String.valueOf(w));
	}
	
	public void setElevatorBounds(boolean[] elevatorBounds) {
		boolean all = true;
		String str = "";
		for (int i=0; i<elevatorBounds.length; i++) {
			if (elevatorBounds[i]){
				all = false;
				str = str + i + " ";
			}
		}
		System.out.println(all);
		if (all)
			serviceableFloors.setText("ALL");
		else
			serviceableFloors.setText(str);
	}

